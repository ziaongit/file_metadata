{
    "version": 2,
    "builds": [
      { "src": "api/index.js", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "api/index.js" },
      { "src": "/", "dest": "api/index.js" },
      { "src": "/public/(.*)", "dest": "/public/$1" },
      { "src": "/views/(.*)", "dest": "/views/$1" }
    ],
    "staticFiles": {
      "public": "public",
      "views": "views"
    }
  }
  